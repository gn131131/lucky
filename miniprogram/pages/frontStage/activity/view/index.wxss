/* pages/frontStage/activity/view/index.wxss */
.top-item {
  margin-bottom: 40rpx;
}

.square {
  flex: 1;
  text-align: center;
  font-size: 40rpx;
  color: goldenrod;
}

.item-wrapper {
  padding: 40rpx;
}

.enter-btn {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  left: 50%;
  bottom: 150rpx;
  transform: translateX(-50%);
  background: #805DFA;
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
  color: #fff;
  font-size: 60rpx;
}

.enter-btn:after {
  content: '';
  position: absolute;
  width: 250rpx;
  height: 250rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border: 6rpx solid #805DFA;
  border-radius: 50%;
  animation: scale 1s ease-in-out alternate infinite;
}

.expire-btn {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  left: 50%;
  bottom: 150rpx;
  transform: translateX(-50%);
  background: crimson;
  border-radius: 50%;
  width: 150rpx;
  height: 150rpx;
  color: #fff;
  font-size: 35rpx;
  border: 10rpx solid #fff;
}

.expire-btn:after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 145rpx;
  transform: rotate(45deg);
  background: #fff;
  animation: rotate 5s ease-in-out alternate infinite;
}

@keyframes scale {
  from {
    width: 250rpx;
    height: 250rpx;
    border: 6rpx solid #805DFA;
  }
  to {
    width: 200rpx;
    height: 200rpx;
    border: 6rpx solid goldenrod;
  }
}

@keyframes rotate {
  from {
    transform: rotate(45deg);
  }
  to {
    transform: rotate(405deg);
  }
}

.user-item {
  position: relative;
  border: 4rpx solid #7C9FFF;
  border-radius: 20rpx;
  margin: 20rpx;
  padding: 15rpx;
}

.user-avatar {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}