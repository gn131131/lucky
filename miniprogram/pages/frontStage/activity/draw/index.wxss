input {
  color: #000;
}

.double-star {
  position: fixed;
  bottom: 7vh;
  width: 100%;
  left: 0;
  display: flex;
  justify-content: center;
}

.double-star image {
  width: 350rpx;
  height: 350rpx;
}

.rotate-slow {
  animation: rotate 3s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  50% {
    transform: rotate(180deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.flip-container {
  position: fixed;
	perspective: 1000;
  left: 50%;
  bottom: 35vh;
  transform: translateX(-50%);
}
/* flip the pane when hovered */
.flip-container.flip .flipper {
  animation: flip 3s ease-out forwards;
}

@keyframes flip {
  from {
    transform: rotateY(0deg);
  }
  to {
    transform: rotateY(180deg);
  }
}

.flip-container {
  width: 60vw;
  height: 85vw;
}
.flipper,
.front,
.back {
	width: 100%;
	height: 100%;
}

/* flip speed goes here */
.flipper {
	transition: 0.6s;
	transform-style: preserve-3d;
	position: relative;
}

/* hide back of pane during swap */
.front, .back {
	backface-visibility: hidden;
	position: absolute;
	top: 0;
	left: 0;
}

/* front pane, placed above back */
.front {
	z-index: 2;
}

/* back, initially hidden pane */
.back {
	transform: rotateY(180deg);
}

.backdrop {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  background: #000;
}