/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  min-height: 100vh;
  box-sizing: border-box;
  overflow-y: auto;
} 

view {
  box-sizing: border-box;
}

button {
  margin: 40rpx auto;
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

input {
  margin: 40rpx;
  height: 80rpx;
  background: #fff;
  border: 1px solid #ccc;
  border-radius: 15rpx;
}

picker {
  margin: 10rpx auto;
}

image {
  width: 100%;
  height: 100%;
}

.avatar {
  position: relative;
  margin-left: 20rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background: #efefef;
  border-bottom: 1rpx solid #ddd;
}

.content {
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 100%;
  padding: 100rpx;
}

.table {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-bottom: 400rpx;
}

.tr {
  display: flex;
  width: 100%;
}

.td {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  border: 1px solid #000;
}

.no-data {
  margin: 20rpx auto;
}

.list-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: lightsteelblue;
  border: #efefef;
  border-radius: 20rpx;
}