/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
} 

view {
  box-sizing: border-box;
}

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

input {
  background: #fff;
  border: 1px solid #efefef;
}

.avatar {
  position: relative;
  margin-left: 20rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background: #efefef;
  border-bottom: 1rpx solid #ddd;
}

.content {
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 100%;
  padding: 100rpx;
}